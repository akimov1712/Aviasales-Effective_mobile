<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="8dp"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <View
        android:id="@+id/view_color"
        android:layout_width="24dp"
        android:layout_height="24dp"
        android:background="@drawable/background_rounded_50"
        android:backgroundTint="@color/red"
        android:layout_marginTop="8dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tv_name"
        style="@style/title_4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:text="Уральские авиалинии"
        android:textColor="@color/white"
        app:layout_constraintStart_toEndOf="@+id/view_color"
        app:layout_constraintTop_toTopOf="@+id/view_color" />

    <TextView
        android:id="@+id/tv_price"
        style="@style/title_4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="2 390 ₽"
        android:drawableEnd="@drawable/ic_arrow_right"
        android:textColor="@color/blue"
        app:layout_constraintBottom_toBottomOf="@+id/tv_name"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@+id/tv_name" />

    <TextView
        android:id="@+id/tv_times"
        style="@style/text_2"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="07:00  09:10   10:00  11:00  12:00  13:00  12:00      "
        android:textColor="@color/white"
        android:layout_marginTop="4dp"
        android:singleLine="true"
        app:layout_constraintEnd_toEndOf="@+id/tv_price"
        app:layout_constraintStart_toStartOf="@+id/tv_name"
        app:layout_constraintTop_toBottomOf="@+id/tv_name" />

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/grey4"
        android:layout_marginTop="10dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tv_times" />


</androidx.constraintlayout.widget.ConstraintLayout>